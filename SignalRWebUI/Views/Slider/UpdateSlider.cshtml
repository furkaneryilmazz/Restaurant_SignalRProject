@model UpdateSliderDto

@{
    ViewData["Title"] = "UpdateSlider";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Yeni Öne Çıkan Alan Güncelleme Sayfası</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Öne Çıkan Alan Güncelleme</div>
						</div>
						<div class="card-body">
							<input type="hidden" asp-for="SliderID"/>
							<div class="form-group">
								<label for="Title1">1.Başlığı Giriniz...</label>
								<input type="text" class="form-control" asp-for="Title1" id="Title1">
							</div>
							<div class="form-group">
								<label for="Title2">2.Başlığı Giriniz...</label>
								<input type="text" class="form-control" asp-for="Title2" id="Title2">
							</div>
							<div class="form-group">
								<label for="Title3">3.Başlığı Giriniz...</label>
								<input type="text" class="form-control" asp-for="Title3" id="Title3">
							</div>
							<div class="form-group">
								<label for="Description1">1.Açıklamayı Giriniz...</label>
								<input type="text" class="form-control" asp-for="Desciption1" id="Description1">
							</div>
							<div class="form-group">
								<label for="Description2">2.Açıklamayı Giriniz...</label>
								<input type="text" class="form-control" asp-for="Desciption2" id="Description2">
							</div>
							<div class="form-group">
								<label for="Description3">3.Açıklamayı Giriniz...</label>
								<input type="text" class="form-control" asp-for="Desciption3" id="Description3">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-success">Öne Çıkan Alan Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
