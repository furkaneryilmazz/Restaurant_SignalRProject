@model UpdateContactDto

@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Yeni İletişim Ekleme Sayfası</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni İletişim Girişi</div>
						</div>
						<input type="hidden" asp-for="ContactID"/>
						<div class="card-body">
							<div class="form-group">
								<label for="Location">Lokasyonu Giriniz...</label>
								<input type="text" class="form-control" asp-for="Location" id="Location">
							</div>
							<div class="form-group">
								<label for="Phone">Telefon Numarası Giriniz...</label>
								<input type="number" class="form-control" asp-for="Phone" id="Phone">
							</div>
							<div class="form-group">
								<label for="title">Alt Başlık Giriniz...</label>
								<input type="text" class="form-control" asp-for="FooterTitle" id="title">
							</div>
							<div class="form-group">
								<label for="opendays">Açık Günleri Giriniz..</label>
								<input type="text" class="form-control" asp-for="OpenDays" id="opendays">
							</div>
							<div class="form-group">
								<label for="OpenDaysDescription">Açık Günler Açıklama...</label>
								<input type="text" class="form-control" asp-for="OpenDaysDescription" id="OpenDaysDescription">
							</div>
							<div class="form-group">
								<label for="OpenHours">Açık Saatler...</label>
								<input type="text" class="form-control" asp-for="OpenHours" id="OpenHours">
							</div>
							<div class="form-group">
								<label for="Mail">Mail Adresi Giriniz...</label>
								<input type="email" class="form-control" asp-for="Mail" id="Mail">
							</div>
							<div class="form-group">
								<label for="FooterDescription">Alt Açıklama Giriniz...</label>
								<input type="text" class="form-control" asp-for="FooterDescription" id="FooterDescription">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-success">İletişim Bilgi Yazısını Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
