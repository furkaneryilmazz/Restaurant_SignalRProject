@model UpdateAboutDto

@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Hakkımda Güncelleme Sayfası</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Hakkımda Güncelleme Girişi</div>
						</div>
						<div class="card-body">
							<input type="hidden" asp-for="AboutID"/>
							<div class="form-group">
								<label for="title">Başlık Giriniz...</label>
								<input type="text" class="form-control" asp-for="Title" id="title">
							</div>
							<div class="form-group">
								<label for="Description">Açıklamayı Giriniz</label>
								<textarea rows="5" class="form-control" asp-for="Description" id="Description"></textarea>
							</div>
							<div class="form-group">
								<label for="ımageurl">Fotoğraf Giriniz...</label>
								<input type="text" class="form-control" asp-for="ImageUrl" id="ımageurl">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-success">Hakkımda Güncelleme</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

