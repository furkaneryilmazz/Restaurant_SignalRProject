@model UpdateDiscountDto

@{
    ViewData["Title"] = "UpdateDiscount";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Yeni İndirimli Ürün Güncelleme Sayfası</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni İndirimli Ürün Güncelleme</div>
						</div>
						<div class="card-body">
							<input type="hidden" asp-for="DiscountID"/>
							<div class="form-group">
								<label for="title">Ürün Adını Giriniz...</label>
								<input type="text" class="form-control" asp-for="Title" id="title">
							</div>
							<div class="form-group">
								<label for="Amount">Ürün İndirim Oranını Giriniz...</label>
								<input type="number" class="form-control" asp-for="Amount" id="Amount">
							</div>
							<div class="form-group">
								<label for="ımageurl">Ürün Görselini Giriniz...</label>
								<input type="text" class="form-control" asp-for="ImageUrl" id="ımageurl">
							</div>
							<div class="form-group">
								<label for="Description">Ürün Açıklamasını Giriniz...</label>
								<input type="text" class="form-control" asp-for="Description" id="Description">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-success">İndirimli Ürün Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
